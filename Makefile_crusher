# ----- Make Macros -----

CXX = CC
CXXFLAGS = -std=c++14 -fopenmp -I${ROCM_PATH}/include -D__HIP_ROCclr__ -D__HIP_ARCH_GFX90A__=1 --rocm-path=${ROCM_PATH} --offload-arch=gfx90a -x hip
OPTFLAGS = -O3 

LD_FLAGS = -fopenmp -L${ROCM_PATH}/lib -lamdhip64 -lnccl

TARGETS = Alltoall
OBJECTS = main.o 

# ----- Make Rules -----

all:	$(TARGETS)

%.o: %.cpp
	${CXX} ${CXXFLAGS} ${OPTFLAGS} $< -c -o $@

Alltoall: $(OBJECTS)
	$(CXX) -o $@ $(OBJECTS) $(LD_FLAGS)

clean:
	rm -f $(TARGETS) *.o *.o.* *.txt *.bin core *.html *.xml
