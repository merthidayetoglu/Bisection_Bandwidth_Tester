# ----- Make Macros -----

CXX = mpicxx
CXXFLAGS = -std=c++14 -fopenmp
OPTFLAGS = -O3 

NVCC = nvcc
NVCCFLAGS = -lineinfo -O3 -std=c++14 -gencode arch=compute_70,code=sm_70 -ccbin=mpicxx -Xcompiler -fopenmp -Xptxas="-v" 

LD_FLAGS = -ccbin=mpicxx -Xcompiler -fopenmp -lnccl

TARGETS = Alltoall
OBJECTS = main.o 

# ----- Make Rules -----

all:	$(TARGETS)

%.o: %.cpp
	${CXX} ${CXXFLAGS} ${OPTFLAGS} $< -c -o $@

%.o : %.cu
	${NVCC} ${NVCCFLAGS} $< -c -o $@

Alltoall: $(OBJECTS)
	$(NVCC) -o $@ $(OBJECTS) $(LD_FLAGS)

clean:
	rm -f $(TARGETS) *.o *.o.* *.txt *.bin core *.html *.xml
